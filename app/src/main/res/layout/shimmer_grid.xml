<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/ads_image"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:background="#DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/ads_name"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:background="#DDDDDD"
                android:includeFontPadding="false"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/ads_image"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ads_image"
                app:layout_constraintTop_toBottomOf="@+id/ads_image" />

            <View
                android:id="@+id/ads_price"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:background="#DDDDDD"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/ads_name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ads_name"
                app:layout_constraintTop_toBottomOf="@+id/ads_name" />

            <View
                android:id="@+id/ads_store"
                android:layout_width="85dp"
                android:layout_height="12dp"
                android:layout_marginTop="16dp"
                android:background="#DDDDDD"
                android:includeFontPadding="false"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/ads_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ads_price"
                app:layout_constraintTop_toBottomOf="@+id/ads_price"
                tools:ignore="SmallSp" />

            <View
                android:id="@+id/ads_rate"
                android:layout_width="85dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="#DDDDDD"
                android:includeFontPadding="false"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ads_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ads_store"
                app:layout_constraintTop_toBottomOf="@+id/ads_store"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
